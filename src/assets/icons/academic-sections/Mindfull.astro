        <!-- Circles for peaceful thoughts -->
        <circle cx="20" cy="18" r="2" fill="currentColor" />
        <circle cx="44" cy="18" r="2" fill="currentColor" />
        <circle cx="32" cy="10" r="2" fill="currentColor" />
    </g>
</svg>
