import yashas from "../assets/images/contributors/yashas.webp";
import shaun from "../assets/images/contributors/shaun.webp";
---

<Layout
  title="Website Contributors"
  navtext="Home"
  transparentNav={true}
  buttonLink="/"
>
  <div
    class="hero flex items-center justify-between px-8 md:px-12 lg:px-20 pt-[190px]"
  >
    <!-- Hero Content -->
    <div>
      <h3 class="font-bold text-2xl md:text-3xl mb-4 left-bar">{title}</h3>
      <slot />
    </div>
  </div>

  <div
    class="p-[55px] xl:p-[165px] grid grid-cols-1 sm:grid-cols-2 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-3 2xl:grid-cols-3 justify-center gap-10 lg:gap-28"
  >
    <ContributorCard
      name="Leona Varghese"
      img={leona.src}
      description="Hey there, this is a very short about me"
      github="https://github.com/LeonaWH"
      linkedin="https://www.linkedin.com/in/leona-varghese-95897921b"
      instagram="https://www.instagram.com/leona_wh_/"
    />
    <ContributorCard
      name="Siddharth Dhaigude"
      img={sid.src}
      description="Hey there, this is a very short about me"
      github="https://github.com/sd8capricon"
