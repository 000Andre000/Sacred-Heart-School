---
import Layout from "../layouts/Layout.astro"
import Section from "../components/Section.astro"
---

<Layout title="Admissions" navtext="Home" transparent={false} buttonLink="/index">
    <br><br><br><br><br><br>
    <Section class="bg-white">
        <div class="flex justify-center mb-4">
            <div class="text-black relative inline-block font-bold text-2xl">
              Got Any Questions?
              <span class="after:content-[''] after:block after:w-3/4 after:h-0.5 after:bg-red-500 after:absolute after:bottom-0 after:-left-1/2 after:transform after:-translate-x-1/2"></span>
            </div>
          </div>
          
          <div class="flex">
            <!-- Left side -->
            <div class="ml-4 flex-1">
              <div class="mt-4">
                <h1 class="text-3xl font-bold text-black">Inquiry Form</h1>
                <p class="text-black">Thank you for expressing interest in our institution! Please fill out the form below to inquire about our admission process.<br>Our dedicated team is ready to assist you on your journey towards academic excellence. We look forward to answering your questions and helping you take the first step towards a rewarding educational experience.</p>
              </div>
            </div>
          
            <!-- Right side -->
            <div class="bg-primary p-4 ml-4 flex-1">
              <div class="mb-4">
                <input type="text" class="w-full p-2 bg-white h-full" placeholder="Full Name of the Parent">
              </div>
              <div class="mb-4">
                <input type="text" class="w-full p-2 bg-white h-full" placeholder="Contact Number">
              </div>
              <div class="mb-4">
                <input type="text" class="w-full p-2 bg-white h-full" placeholder="Email Address">
              </div>
              <div class="flex mb-4">
                <details class="dropdown w-2/3 p-2 h-full">
                  <summary class="m-1 btn bg-white">Grade</summary>
                  <ul class="p-2 shadow menu dropdown-content z-[1] rounded-box w-full bg-white text-black">
                    <li><a>Item 1</a></li>
                    <li><a>Item 2</a></li>
                  </ul>
                </details>
                <button class="w-1/3 bg-white text-black p-2 h-full">Submit</button>
              </div>
            </div>
          </div>
          
          
          
          
          
    </Section>
</Layout>