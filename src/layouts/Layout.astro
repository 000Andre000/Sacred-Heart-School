import { Navbar } from "../components/layout";

interface Props {
	title: string;
	navtext: string;
	transparent?: boolean; // transparent | light
	buttonLink: string;
}

const { title, transparent, navtext, buttonLink } = Astro.props as Props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
		<!-- <meta name="generator" content={Astro.generator} /> -->
		<title>{title} | Sacred Heart School</title>
	</head>
	<body>
		<Navbar text={navtext} transparent={true} button_link={buttonLink} />
		<slot />
		
		
	</body>
</html>

<style>
	html {
		background-color: black;
	}
</style>
