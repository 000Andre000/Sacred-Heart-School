---
import { getImage } from "astro:assets";

interface Props {
  title: string;
  image: string | ImageMetadata;
  desc: string;
  rtl?: boolean;
}

const { title, image, desc, rtl } = Astro.props;
const Img = await getImage({
    src: image
});
---
<!-- container -->
<div>
  <!-- inner -->
  <div class={`flex flex-col gap-12 text-white ${rtl ? 'md:flex-row' : 'md:flex-row-reverse'}`}>
    <!-- Text -->
    <div class="flex flex-col justify-center gap-4">
      <!-- Title -->
      <p class="text-xl font-bold">{title}</p>
      <!-- Description -->
      <p class="">{desc}</p>
    </div>
    <!-- Image -->
    <div class="bg-primary p-12 relative w-1/3 aspect-square">
      <img 
        class={`overflow-hidden absolute ${rtl ? 'rounded-tr-[60px]' : 'rounded-tl-[60px]'}`}
        src={Img.src} 
        alt={title + " image"}/>
    </div>
  </div>
</div>
