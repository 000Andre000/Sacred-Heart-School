<style>
    .footer {
        display: flex;
        flex-flow: row wrap;
        padding-top: 4em;
        color: #2f2f2f;
        background-color: black;
        border-top: 1px solid #e5e5e5;
        margin-top: auto;
        flex-shrink: 1;
    }

    .footer > * {
        flex: 1 100%;
    }

    .footer__logo {
        height: 15rem;
        width: 25rem;
        padding: 1em 3em 1em 3em;
    }

    .nav__title {
        font-weight: 400;
        font-size: 18px;
        color: white;
    }

    .footer__btn {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 36px;
        max-width: max-content;
        background-color: rgb(33, 33, 33, 0.07);
        border-radius: 100px;
        color: #2f2f2f;
        line-height: 0;
        margin: 0.6em 0;
        font-size: 1rem;
        padding: 0 1.3em;
    }

    .footer ul {
        list-style: none;
        padding-left: 0;
    }

    .footer li {
        line-height: 2em;
    }

    .footer a {
        text-decoration: none;
    }

    .footer__nav {
        display: flex;
        flex-flow: row wrap;
    }

    .footer__nav > * {
        flex: 1 50%;
        margin-right: 1.25em;
    }

    .nav__ul a {
        color: white;
        font-size: medium;
    }

    .nav__ul li {
        display: flex;
        align-items: center;
        margin-bottom: 2px;
    }

    .nav__ul--extra {
        column-count: 2;
        column-gap: 1.25em;
    }

    .legal {
        display: flex;
        flex-wrap: wrap;
        color: #999;
    }

    .legal__links {
        display: flex;
        align-items: center;
    }

    .heart {
        color: #2f2f2f;
    }

    .nav__item h2 {
        font-weight: bold;
    }

    @media screen and (min-width: 24.375em) {
        .legal .legal__links {
            margin-left: auto;
        }
    }

    @media screen and (min-width: 40.375em) {
        .footer__nav > * {
            flex: 1;
        }

        .nav__item--extra {
            flex-grow: 2;
        }

        .footer__nav {
            flex: 2 0px;
        }
    }

    .copyright {
        text-align: center;
        color: #e5e5e5;
    }

    .btn {
        font-family: "Work Sans", sans-serif;
        font-weight: 500;
        font-size: 16px;
        color: #fff;
        background-color: #d62828;
        padding: 10px 30px;
        border: none;
        box-shadow: rgb(0, 0, 0) 0px 0px 0px 0px;
        border-radius: 1px;
        transition: 602ms;
        transform: translateY(0);
        display: flex;
        flex-direction: row;
        align-items: center;
        cursor: pointer;
    }
</style>
