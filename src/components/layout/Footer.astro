---
import { Image } from "astro:assets";
import logo from "../../assets/images/logo1.webp";
import whatsapp from "../../assets/images/whatsapp.webp";
import SocialBtn from "./SocialBtn.astro";
---


<!--Footer Section -->
<hr class="border-gray-500 mx-10" />
<footer class="bg-dark-slate">
  <div class="lg:flex justify-between px-8 md:px-12 lg:px-24 py-4" id="footer">
    <div class="grid grid-cols-1 md:grid-cols-6 gap-4 md:gap-20">
      <div class="about-footer cards col-span-2">
        <Image class="footer__logo" src={logo} alt="" />
        
       
      </div>

      <div class="links-footer col-span-2">
        <span class="text-lg md:text-lg sm:text-base font-semibold tracking-wider">
          <p class="footer-title">Links</p>
          <hr class="border-primary w-1/2 mb-2" />
        </span>
        <ul class="text-gray-100">
          <li class="mb-1"><a href="/#About">About Us</a></li>
          <li class="mb-1"><a href="/#Activities">Activities</a></li>
          <li class="mb-1">
            <a href="#Infra">Infrastructure</a>
          </li>
          <li class="mb-1"><a href="/#Contact">Contact Us</a></li>
          
        </ul>
    </br>
      <span class="text-lg md:text-lg sm:text-base font-semibold tracking-wider">
            <p class="footer-title">Follow Us</p>
            <hr class="border-primary w-1/2 mb-2" />
        </span>
        <div class="flex md:flex mt-4">
			<SocialBtn height={12} width={12} class="mr-3 btn-sm" type="twitter" />
			<SocialBtn height={12} width={12} class="mr-3 btn-sm" type="instagram" />
			<SocialBtn height={12} width={12} class="mr-3 btn-sm" type="linkedin" />
			<SocialBtn height={12} width={12} class="mr-3 btn-sm" type="facebook" />
			<SocialBtn height={12} width={12} class="mr-3 btn-sm" type="youtube" />
		</div>
      </div>

      <div class="contact-footer col-span-2">
        <span class="text-lg md:text-lg sm:text-base font-semibold tracking-wider">
          <p class="footer-title">Reach out to us</p>
          <hr class="border-primary w-1/2 mb-2" />
        </span>
        <ul class="text-gray-100">
          <li>Sacred Heart School,</li>
          <li>Kalyan-Murbad Rd,</li>
          <li>Varap, Kalyan West,</li>
          <li>Maharashtra, India</li>
          <li>
            <a class="flex mb-2" href="https://wa.me/918605233000"
            ><img
              src={whatsapp.src}
              alt="chat_on_whatsapp"
              class="whatsapp w-[300px] pt-[15px] transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-90 hover:duration-300 hover:cursor-pointer"
            /></a
          >
          </li>
          <li>
            <span class="font-bold text-gray-100">Email:</span>
            <a href="mailto:info@sacredheartschool.in">
                info@sacredheartschool.in
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>


<hr class="border-gray-500 mx-10" />
  <!-- <div class="w-full px-14 py-1 bg-zinc-100 text-[#8b8b8b]"> -->
  <div class="w-full px-14 py-1 text-[#8b8b8b] text-sm mb-2">
    <p id="copyright-text" class="mb-1 text-center">
      Copyright &#169 2023 Sacred Heart School, Kalyan
    </p>
    <p id="copyright-text" class="mb-1 text-center">
      Designed & Developed by
      
      <span class="name text-primary">
        <a
          href="https://dbit.acm.org/"
          target="_blank"
        >
          ACM DBIT
        </a>
      </span>
    </p>
  </div>


<style>
      .footer__logo {
      
        border-color: #ED1E27;
        border-width: 1px;
    }
        li {
        padding-top: 0.1rem;
    }
    .about-footer-text {
        padding-top: 1.1rem;
    }
    #footer {
        padding-top: 2rem;
        padding-bottom: 1.5rem;
    }
</style>
