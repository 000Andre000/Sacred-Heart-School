---
import SectionTitle from "./section-title.astro";

interface Props {
    class?: string;
    theme?: string; // dark | light | accent default: 'light' - determines the color of the text
    title?: string; // the title of the section
}

const props = Astro.props as Props;
if (!props.theme) props.theme = "light";
---

<section
    class={"w-full px-4 md:px-12 xl:px-32 py-8 " +
        (props.class ? props.class + " " : "") +
        (props.theme === "dark" ? "dark" : (props.theme == "accent" ? "accent" : "light"))}

>
    {props.title && <SectionTitle theme={props.theme} title={props.title} />}
    <slot />
</section>

<style>
    .light {
        @apply text-black bg-white;
    }
    .dark {
        @apply text-white bg-black;
    }
    .accent {
        @apply text-white bg-primary-dark/80;
    }
</style>
