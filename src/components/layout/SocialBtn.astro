---
// FB: https://www.facebook.com/sacredheartschoolkalyan
// Insta : https://www.instagram.com/sacredheartkalyan
// LinkedIn: https://www.linkedin.com/school/sacred-heart-school-kalyan/
// Twitter: https://www.twitter.com/SHSKalyan
// YT: https://www.youtube.com/@SacredHeartSchoolKalyan

import { Insta, FB, LinkedIn, Twitter, YT } from "../../assets/icons/";
interface Props {
    type: string;
    class?: string;
    height: number;
    width: number;
}
const props = Astro.props as Props;
let href = "";

switch (props.type) {
    case "instagram":
        href = "https://www.instagram.com/sacredheartkalyan";
        break;
    case "facebook":
        href = "https://www.facebook.com/sacredheartschoolkalyan";
        break;
    case "linkedin":
        href = "https://www.linkedin.com/school/sacred-heart-school-kalyan/";
        break;
    case "twitter":
        href = "https://www.twitter.com/SHSKalyan";
        break;
    case "youtube":
        href = "https://www.youtube.com/@SacredHeartSchoolKalyan";
        break;
    default:
        break;
}
---

<a
    href={href}
    target="_blank"
    rel="noopener noreferrer"
    class={"btn btn-circle btn-outline text-white hover:bg-white" +
        (props.class ? " " + props.class : "")}
>
    {
        props.type == "instagram" && (
            <Insta height={props.height} width={props.width} />
        )
    }
    {
        props.type == "facebook" && (
            <FB height={props.height} width={props.width} />
        )
    }
    {
        props.type == "linkedin" && (
            <LinkedIn height={props.height} width={props.width} />
        )
    }
    {
        props.type == "twitter" && (
            <Twitter height={props.height} width={props.width} />
        )
    }
    {
        props.type == "youtube" && (
            <YT height={props.height} width={props.width} />
        )
    }
</a>
