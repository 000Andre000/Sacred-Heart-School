---
interface Props {
    title: string;
    theme?: string; // 'dark' | 'light' default: 'light' determines the color of the title
}

const { title, theme = "light" } = Astro.props as Props;
---
<div class={"relative z-0 w-fit border-black border-2 " +
        (theme == "accent" ? "accent" : "light")}>
    <p class="text-xl sm:text-2xl lg:text-4xl font-black pt-1">
        {title}
    </p>
    <span class="absolute h-1/3 md:h-8 w-[36ch] bottom-full -left-12 xl:-left-32 -z-10 opacity-40"></span>
    <span class="absolute h-1/6 lg:h-6 w-[12ch] bottom-1 -left-16 sm:-left-20 lg:-left-28 xl:-left-32 opacity-90"></span>
</div>

<style>
    .light {
        @apply text-black;
    }
    .light > span {
        @apply bg-primary;
    }
    .accent {
        @apply text-white;
    }
    .accent > span {
        @apply bg-white;
    }
</style>