---
interface Props {
    title: string;
    theme?: string; // 'dark' | 'light' default: 'light' determines the color of the title
}

const { title, theme = "light" } = Astro.props as Props;
---
<div class={"relative z-0 w-full " +
        (theme == "accent" ? "accent" : "light")}>
    <p class="text-xl sm:text-3xl lg:text-4xl font-black pt-1">
        {title}
    </p>
    <span class="absolute h-6 md:h-8 w-1/2 md:w-[36ch] bottom-full -left-12 xl:-left-32 -z-10 opacity-40"></span>
    <span class="absolute h-2/3 md:h-6 w-4 md:w-[12ch] bottom-1 -left-6 md:-left-28 lg:-left-28 xl:-left-32 opacity-90"></span>
</div>

<style>
    .light {
        @apply text-black;
    }
    .light > span {
        @apply bg-primary;
    }
    .accent {
        @apply text-white;
    }
    .accent > span {
        @apply bg-white;
    }
</style>
