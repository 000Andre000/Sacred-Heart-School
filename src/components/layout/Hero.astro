---
interface Props {
    title: string;
    bgSrc: string;
}

const { title, bgSrc } = Astro.props as Props;
---

<div class="hero flex items-center justify-between px-8 md:px-12 lg:px-20">
    <!-- Hero Content -->
    <div>
        <h2 class="font-bold text-3xl md:text-4xl mb-4 left-bar">{title}</h2>
        <slot />
    </div>
</div>

<style define:vars={{ bgSrc }}>
    :root {
        --hero-opacity: 0.4;
    }
    .hero {
        color: #fff;
        background-image: linear-gradient(
                rgba(0, 0, 0, var(--hero-opacity)),
                rgba(0, 0, 0, var(--hero-opacity))
            ),
            var(--bgSrc);
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        height: 80vh;
    }
</style>
