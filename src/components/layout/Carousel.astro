---
// Icons
// import { ArrowLeft, ArrowRight } from "../assets/icons";

// Swiper CSS
import "swiper/css";
import "swiper/css/pagination";

interface Props {
    photos: Array<string>;
}
const { photos } = Astro.props as Props;
---
<div class="swiper">
    <div class="swiper-wrapper">
        {
            photos.map((photo) => (
            <div class="swiper-slide">            
                <img class="item-img shadow-effect" src={photo}/>
            </div>

            ))
        }
    </div>
    <div class="flex justify-between"> 
        <svg aria-label="Previous" class="swiper-button-prev icon">
            <path d="M0.704 17.696l9.856 9.856c0.896 0.896 2.432 0.896 3.328 0s0.896-2.432 0-3.328l-5.792-5.856h21.568c1.312 0 2.368-1.056 2.368-2.368s-1.056-2.368-2.368-2.368h-21.568l5.824-5.824c0.896-0.896 0.896-2.432 0-3.328-0.48-0.48-1.088-0.704-1.696-0.704s-1.216 0.224-1.696 0.704l-9.824 9.824c-0.448 0.448-0.704 1.056-0.704 1.696s0.224 1.248 0.704 1.696z"></path>
        </svg>
        <div class="swiper-pagination"></div> 
        <svg aria-label="Next" class="swiper-button-next icon">
            <path d="M31.296 14.336l-9.888-9.888c-0.896-0.896-2.432-0.896-3.328 0s-0.896 2.432 0 3.328l5.824 5.856h-21.536c-1.312 0-2.368 1.056-2.368 2.368s1.056 2.368 2.368 2.368h21.568l-5.856 5.824c-0.896 0.896-0.896 2.432 0 3.328 0.48 0.48 1.088 0.704 1.696 0.704s1.216-0.224 1.696-0.704l9.824-9.824c0.448-0.448 0.704-1.056 0.704-1.696s-0.224-1.248-0.704-1.664z" fill="#555"></path>
        </svg>
    </div>
</div>

<style>
    .swiper {
        @apply w-full px-2;
    }

    .swiper-slide {
        font-size: 18px;
        text-align: center;
        opacity: 0;
        -webkit-transition: all 0.3s ease-in-out;
        -moz-transition: all 0.3s ease-in-out;
        transition: all 0.3s ease-in-out;
    }

    .swiper-slide img {
        @apply block object-cover rounded-lg shadow-xl;
    }

    .swiper-slide-active {
        opacity: 1;
    }

    icon {
        @apply text-blue-400;
    }

    .swiper-pagination {    
        @apply relative left-0 translate-x-0 !important;
    }
</style>

<script>
    import Swiper from 'swiper';
    import {
        Autoplay,
        Navigation,
        Pagination,
    } from "swiper/modules";
    Swiper.use([Autoplay, Navigation, Pagination]);

    new Swiper(".swiper", {
        slidesPerView: 1,
        spaceBetween: 30,
        centeredSlides: true,
        autoplay: {
            delay: 5000,
        },
        loop: true,
        pagination: {
            el: ".swiper-pagination",
            dynamicBullets: true,
        },
        navigation: {
            nextEl: ".swiper-button-next",
            prevEl: ".swiper-button-prev",
        },
    });
</script>