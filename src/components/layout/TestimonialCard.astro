---
interface Props {
    name: string;
    image: string; 
    body: string;
}

const {name, image, body} = Astro.props as Props;
---
<div class="max-w-md py-4 px-8 bg-white shadow-lg rounded-lg my-20">
  <div class="flex justify-center md:justify-end -mt-16">
    <img class="w-20 h-20 object-cover rounded-full border-2 border-indigo-500" 
        src={image}>
  </div>
  <div>
    <h2 class="text-gray-800 text-xl font-semibold">{name}</h2>
    <p class="mt-2 text-gray-600 text-sm">{body}</p>
  </div>
</div>
