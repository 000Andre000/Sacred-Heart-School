        <div
          class="location text-xl font-normal items-center text-black font-sans flex justify-evenly pl-[10px] pt-[35px]"
        >
          <img src={location.src} class="w-[46px] h-[58px]" alt="location" />
          <p class="p-2">{address}</p>
        </div>
        <div
          class="email text-xl font-normal items-center text-black font-sans flex pl-[10px] pt-[35px]"
        >
          <img src={message.src} class="w-[49px] h-[35.px]" alt="email" />
          <p class="p-2">{email}</p>
        </div>
        <div
          class="timings text-xl font-normal items-center text-black font-sans flex pl-[10px] pt-[35px]"
        >
          <img src={calendar.src} class="w-[47px] h-[42.px]" alt="timings" />

          <p class="p-2">{timings} <br /> {sunday_timing}</p>
        </div>
      </div>
      <iframe
        class="map h-full w-1/2 rounded-lg"
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3766.8129616999313!2d73.18158647536285!3d19.24698158199317!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3be793ff36fb5f5d%3A0x4a2ce3c128f502eb!2sSacred%20Heart%20School!5e0!3m2!1sen!2sus!4v1702301915298!5m2!1sen!2sus"
        class="w-full h-full"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"></iframe>
    </div>
    
    </div>
  </section>
</div>

