---
// Contact-us component
// variant - light | transparent
import whatsapp from "../../assets/images/whatsapp.png";
import location from "../../assets/images/location.svg";
import message from "../../assets/images/message.svg";
import calendar from "../../assets/images/calendar.svg";

//components
import { SocialBtn } from "../layout/";

//variable declaration for contact details - (if any changes, you can change it here and it'll be visible on website)
const name = "Sacred Heart School, Kalyan";
const address = "Sacred Heart School, Kalyan-Murbad Rd, Varap, Kalyan West, Kalyan, Maharashtra, India";
const email = "info@sacredheartschool.in";
const timings = "Mon - Sat 07:00 AM - 05:00 PM ";
const sunday_timing = "Sun Closed";
---

<div after="Contact Us" class="flex flex-col relative z-0 md:mt-8 md:mb-24 md:mx-4 md:flex-row before:h-full pt-16 md:pt-0 before:w-full md:before:w-1/2 before:bg-primary-dark before:absolute before:right-0 before:top-0 md:before:top-20 before:-z-10 before:rounded-lg after:content-[attr(after)] after:whitespace-nowrap after:text-white after:text-2xl sm:after:text-3xl after:font-bold after:absolute after:left-1/2 after:-translate-x-1/2 after:top-4 md:after:left-3/4 md:after:top-[105%]">
  
  <!--Contact Details -->
  <div class="p-6 md:w-1/2 bg-white rounded-t-lg md:rounded-l-lg md:rounded-tr-none">
    <p class="text-2xl md:text-3xl sm:text-2xl text-center md:text-left font-bold text-red-600 font-sans">{name}</p>
    <a class="pt-4 mx-auto md:mx-0 block w-fit" href="https://wa.me/918605233000" target="_blank">
      <img src={whatsapp.src} alt="chat_on_whatsapp"
        class="w-64 md:w-48 pt-4 hover:cursor-pointer"          
        />
    </a>
    <div
      class="md:text-base items-center text-black flex justify-evenly pt-4"
      >
      <img src={location.src} class="" alt="location" />
      <p class="p-2">{address}</p>
    </div>
    <div
      class="md:text-base items-center text-black flex pt-2"
      >
      <img src={message.src} class="" alt="email" />
      <p class="p-2">{email}</p>
    </div>
    <div
      class="md:text-base items-center text-black flex pt-2"
      >
      <img src={calendar.src} class="" alt="timings" />
      <p class="p-2">{timings} <br /> {sunday_timing}</p>
    </div>
  </div>

  <!--Map-->
  <div class="flex md:w-1/2">
    <iframe
      class="w-full h-full bg-white rounded-b-lg md:rounded-bl-none md:rounded-r-lg"
      src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1930505.543411047!2d71.68337532499997!3d19.08489030538538!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3be793ff36fb5f5d%3A0x4a2ce3c128f502eb!2sSacred%20Heart%20School!5e0!3m2!1sen!2sin!4v1702451287546!5m2!1sen!2sin"
      style="border:0;"
      allowfullscreen=""
      loading="lazy"
      referrerpolicy="no-referrer-when-downgrade"></iframe>
  </div>
  <div
        class="flex relative flex-row gap-2 sm:gap-4 md:flex-col justify-center px-8 py-4 md:top-20"
      >
        <SocialBtn height={16} width={16} type="twitter" />
        <SocialBtn height={16} width={16} type="instagram" />
        <SocialBtn height={16} width={16} type="linkedin" />
        <SocialBtn height={16} width={16} type="facebook" />
        <SocialBtn height={16} width={16} type="youtube" />
      </div>
</div>
