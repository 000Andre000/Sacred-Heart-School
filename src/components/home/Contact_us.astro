---
// Contact-us component
// variant - light | transparent
import whatsapp from "../../assets/images/whatsapp.png";
import location from "../../assets/images/location.png";
import message from "../../assets/images/message.png";
import calendar from "../../assets/images/calendar.png";

//components
import {SocialBtn } from "../layout/";

---
<section class="container ml-[250px] relative flex items-center mt-12 mb-[140px]">
    <div class="white-box bg-white w-[1192.66px] h-[547.97px] rounded-lg flex">
        <div class="details h-full w-1/2 flex-row items-center content-center pt-[45px] pl-[35px] justify-evenly">
            <p class="name  text-4xl font-bold text-red-600 font-sans">Sacred Heart School, Kalyan</p>
            <a href=""><img src={whatsapp.src} alt="chat_on_whatsapp" class="whatsapp w-[400px] pl-[10px] pt-[35px] transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-90 hover:duration-300 hover:cursor-pointer"></a>
            <div class="location text-xl font-normal items-center text-black font-sans flex justify-evenly pl-[10px] pt-[35px]">
                <img src={location.src} class="w-[46px] h-[58px]" alt="location">
                <!-- <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1115 0z" />
                  </svg>   -->
                <p class="p-2">Sacred Heart School, Kalyan-Murbad Rd, Varap, Kalyan West, Kalyan, Maharashtra, India</p>
            </div>
            <div class="email text-xl font-normal items-center text-black font-sans flex pl-[10px] pt-[35px]">
                <img src={message.src} class="w-[49px] h-[35.px]" alt="email">
                <!-- <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.5 4.615a2.25 2.25 0 01-2.36 0L3.32 8.91a2.25 2.25 0 01-1.07-1.916V6.75" />
                  </svg> -->
                <p class="p-2">info@sacredheartschool.in</p>
            </div>
            <div class="timings text-xl font-normal items-center text-black font-sans flex pl-[10px] pt-[35px]">
                <img src={calendar.src} class="w-[47px] h-[42.px]" alt="timings">
                <!-- <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 012.25-2.25h13.5A2.25 2.25 0 0121 7.5v11.25m-18 0A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75m-18 0v-7.5A2.25 2.25 0 015.25 9h13.5A2.25 2.25 0 0121 11.25v7.5m-9-6h.008v.008H12v-.008zM12 15h.008v.008H12V15zm0 2.25h.008v.008H12v-.008zM9.75 15h.008v.008H9.75V15zm0 2.25h.008v.008H9.75v-.008zM7.5 15h.008v.008H7.5V15zm0 2.25h.008v.008H7.5v-.008zm6.75-4.5h.008v.008h-.008v-.008zm0 2.25h.008v.008h-.008V15zm0 2.25h.008v.008h-.008v-.008zm2.25-4.5h.008v.008H16.5v-.008zm0 2.25h.008v.008H16.5V15z" />
                  </svg>                   -->
                <p class="p-2">Mon - Saturday 07:00 AM - 05:00 PM <br> Sunday Closed</p>
            </div>
        </div>
        <iframe class="map h-full w-1/2 rounded-lg" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3766.8129616999313!2d73.18158647536285!3d19.24698158199317!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3be793ff36fb5f5d%3A0x4a2ce3c128f502eb!2sSacred%20Heart%20School!5e0!3m2!1sen!2sus!4v1702301915298!5m2!1sen!2sus" class="w-full h-full" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
    </div>
    <div class="red-box bg-primary-dark relative w-[490.90px] h-[463.48px] right-[360px] top-[120px] flex-rev rounded-lg z-[-1]">
        <div class="flex md:flex flex-col justify-center pl-[380px] pt-[50px]">
			<SocialBtn height={20} width={20} class="mb-4" type="twitter" />
			<SocialBtn height={20} width={20} class="mb-4" type="instagram" />
			<SocialBtn height={20} width={20} class="mb-4" type="linkedin" />
			<SocialBtn height={20} width={20} class="mb-4" type="facebook" />
			<SocialBtn height={20} width={20} class="mb-4" type="youtube" />
		</div>
        <div class="contact text-4xl font-bold tracking-wider w-full pt-[30px] flex justify-center">Contact us</div>
    </div>
</section>