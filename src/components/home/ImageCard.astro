
---
interface Props {
	imageLink: string;
    cardTitle: string;
}

const { imageLink, cardTitle } = Astro.props;
---

<div class="card" style= {{ backgroundImage: `url(${imageLink})` }}>
    <div class="content">
      <h4 class="text-white">{cardTitle}</h4>
    </div>
</div>


<style>
    .card {
      flex: 0 0 200px;
      border-radius: 0.5rem;
      transition: 0.5s ease-in-out;
      cursor: pointer;
      box-shadow: 1px 5px 15px #1e0e3e;
      position: relative;
      overflow: hidden;
      background-size: cover;
      margin-bottom: 15px;
      align-self: center;
    }
  
    .card:hover {
      flex: 0 0 280px; /* Take full width on hover */
      box-shadow: 1px 3px 15px #c11921;
      transform: translateY(-30px);
    }
  
    @media (min-width: 350px){
      .card {
        height:400px;
        width: 100%;
        row-gap: 20px;
        margin-top: 50px;
        align-self: center;
    
      }
    }
  
    @media (min-width: 768px) {
      /* Large screens and above */
      .card {
        display: flex-row;
        flex: 0 0 200px;
      }
    }
  
    .content {
      font-size: 1rem;
      color: #fff;
      display: flex;
      align-items: center;
      padding: 15px;
      opacity: 0;
      flex-direction: column;
      height: 100%;
      justify-content: flex-end;
      background: linear-gradient(
        0deg,
        rgba(2, 2, 46, 0.6755077030812324) 0%,
        rgba(255, 255, 255, 0) 70%
      );
      transform: translateY(100%);
      transition:
        opacity 0.5s ease-in-out,
        transform 0.5s 0.2s;
      visibility: hidden;
    }
  
    .card:hover .content {
      opacity: 1;
      transform: translateY(0%);
      visibility: visible;
    }

</style>