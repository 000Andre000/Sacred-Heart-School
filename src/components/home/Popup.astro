<body class="overflow-hidden"> 

  <div id="popup" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50">
    <div class="relative bg-black p-8 rounded-lg text-center">
      <button id="top-right-close-button" class="absolute top-2 right-2 text-white text-2xl">&times;</button>
      
      <h1 class="text-white text-xl font-bold">Welcome to Sacred Heart School!</h1>
      <p class="text-white mt-4">
        Admissions for the Academic year 2025-26 will start from 8th September 2024
        <br />
        for Grades Nursery, Jrkg, Srkg & 1st.
      </p>
      
      <button id="enquiry-button" class="mt-4 px-4 py-2 bg-red-500 text-white rounded">Enquire Now</button>
    </div>
  </div>

  <script>
    const enquiryButton = document.getElementById('enquiry-button');
    
    if (enquiryButton) {
        enquiryButton.addEventListener('click', () => {
        window.location.href = '../admission#enquiry-form'; 
      });
    }

    window.addEventListener('DOMContentLoaded', () => {
      const popup = document.getElementById('popup');
      const topRightCloseButton = document.getElementById('top-right-close-button');

      const handleClosePopup = () => {
        if (popup) {
          popup.style.display = 'none';
        }
        document.body.style.overflow = 'auto';
      };

      if (topRightCloseButton && popup) {
        topRightCloseButton.addEventListener('click', handleClosePopup);
      }
    });
  </script>

</body>

