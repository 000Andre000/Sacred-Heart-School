---
import { Image } from "astro:assets";
import SubjectImg from "../../../assets/images/accordian/Subjects.png";
---

<div class="flex flex-col md:flex-row justify-evenly items-center">
    <div class="md:w-1/2 lg:w-1/3">
        <div class="tab-text">
            <h3>Pre-preparatory Stage</h3>
            <p>
                The subjects taught are English, Hindi, Marathi, Environmental
                Studies and Mathematics.
            </p>
        </div>
        <div class="tab-text">
            <h3>Preparatory Stage</h3>
            <p>
                The subjects taught are English, Hindi, Marathi, Environmental
                Studies and Mathematics.
            </p>
        </div>
    </div>
    <Image
        src={SubjectImg}
        alt="Curriculum"
        class="md:w-1/2 md:h-auto lg:h-68 lg:w-auto"
    />
</div>

<style>
    .tab-text {
        @apply mb-8 lg:mb-16 text-black;
    }
    .tab-text h3 {
        @apply text-lg font-bold;
    }
</style>
