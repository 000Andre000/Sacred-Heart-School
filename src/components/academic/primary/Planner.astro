---
// Components
import { Image } from "astro:assets";
import PlannerPill from "../PlannerPill.astro";

// Assets
import PlannerImg from "../../../assets/images/accordian/Planner.png";
---

<div class="flex flex-col md:flex-row justify-evenly items-center">
    <div class="w-1/3">
        <PlannerPill
            title="Grade 1"
            href="https://drive.google.com/file/d/120mv3HXXfNcxyY2fl0RYLa1opEdjKEYn/view?usp=drive_link"
        />
        <PlannerPill
            title="Grade 2"
            href="https://drive.google.com/file/d/1Eu1xX8ygRy1r2zewuz6mx7Es5OpazzTM/view?usp=drive_link"
        />
        <PlannerPill
            title="Grade 3"
            href="https://drive.google.com/file/d/1-2lItkUvP4WXQePttdLlnH3MPyq8WCEi/view?usp=drive_link"
        />
        <PlannerPill
            title="Grade 4"
            href="https://drive.google.com/file/d/1kPDkT-CAgIbzOXSOUZi6CXDoxSWxOVas/view?usp=drive_link"
        />
    </div>
    <Image
        src={PlannerImg}
        alt="Curriculum"
        class="md:w-1/2 md:h-auto lg:h-64 lg:w-auto"
    />
</div>
