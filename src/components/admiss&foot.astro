<style>
  *,
  *:before,
  *:after {
    box-sizing: border-box;
  }

  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 80%;
    margin: 25px;
  }

  .box {
    width: 350px;
    height: 370px;
    text-align: center;
    color: #fff;
    align-items: center;

    font-size: 24px;
    background: transparent;
    border: 2px solid #fff;
  }

  html {
    font-size: 100%;
  }

  body {
    font-family: "Work Sans", sans-serif;
    margin: 0;
    display: grid;
    grid-template-rows: auto 1fr auto;
    font-size: 14px;
    background-color: #c11921;
    align-items: start;
    min-height: 100vh;
    grid-template-rows: 1fr auto;
    flex-direction: column;
  }

  @media (max-width: 767px) {
    body {
      flex-direction: column-reverse;
      /* Reverse the flex direction for small screens */
    }
  }

  .process {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-top: 50px;
    padding-bottom: 50px;
  }

  .process h2 {
    color: white;
    font-size: 25px;
    font-weight: 700;
  }

  .process h3 {
    color: white;
    padding-top: -24px;
  }

  .footer {
    display: flex;
    flex-flow: row wrap;
    padding-top: 4em;
    color: #2f2f2f;
    background-color: black;
    border-top: 1px solid #e5e5e5;
    margin-top: auto;
    flex-shrink: 1;
  }

  .footer > * {
    flex: 1 100%;
  }

  .footer__logo {
    height: 15rem;
    width: 25rem;
    padding: 1em 3em 1em 3em;
  }

  .nav__title {
    font-weight: 400;
    font-size: 18px;
    color: white;
  }

  .footer__btn {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 36px;
    max-width: max-content;
    background-color: rgb(33, 33, 33, 0.07);
    border-radius: 100px;
    color: #2f2f2f;
    line-height: 0;
    margin: 0.6em 0;
    font-size: 1rem;
    padding: 0 1.3em;
  }

  .footer ul {
    list-style: none;
    padding-left: 0;
  }

  .footer li {
    line-height: 2em;
  }

  .footer a {
    text-decoration: none;
  }

  .footer__nav {
    display: flex;
    flex-flow: row wrap;
  }

  .footer__nav > * {
    flex: 1 50%;
    margin-right: 1.25em;
  }

  .nav__ul a {
    color: white;
    font-size: medium;
  }

  .nav__ul li {
    display: flex;
    align-items: center;
    margin-bottom: 2px;
  }

  .nav__ul--extra {
    column-count: 2;
    column-gap: 1.25em;
  }

  .legal {
    display: flex;
    flex-wrap: wrap;
    color: #999;
  }

  .legal__links {
    display: flex;
    align-items: center;
  }

  .heart {
    color: #2f2f2f;
  }

  .nav__item h2 {
    font-weight: bold;
  }

  @media screen and (min-width: 24.375em) {
    .legal .legal__links {
      margin-left: auto;
    }
  }

  @media screen and (min-width: 40.375em) {
    .footer__nav > * {
      flex: 1;
    }

    .nav__item--extra {
      flex-grow: 2;
    }

    .footer__nav {
      flex: 2 0px;
    }
  }

  .copyright {
    text-align: center;
    color: #e5e5e5;
  }

  .btn {
    font-family: "Work Sans", sans-serif;
    font-weight: 500;
    font-size: 16px;
    color: #fff;
    background-color: #d62828;
    padding: 10px 30px;
    border: none;
    box-shadow: rgb(0, 0, 0) 0px 0px 0px 0px;
    border-radius: 1px;
    transition: 602ms;
    transform: translateY(0);
    display: flex;
    flex-direction: row;
    align-items: center;
    cursor: pointer;
  }
</style>
